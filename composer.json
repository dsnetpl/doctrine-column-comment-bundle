{
    "name": "dsnetpl/doctrine-column-comment-bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "minimum-stability": "dev",
    "description": "Modifying doctrine metadata so that doctrine knows that columns in the database have additional information - a comment.",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "doctrine/doctrine-bundle": "^3.2",
        "doctrine/orm": "^3.6",
        "phpdocumentor/reflection-docblock": "^5.6"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.3",
        "roave/security-advisories": "dev-latest",
        "slevomat/coding-standard": "^8.26",
        "symfony/flex": "^2.8",
        "symfony/framework-bundle": ">=6.4.0",
        "symfony/proxy-manager-bridge": ">=6.4.0",
        "symplify/easy-coding-standard": "^13"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "symfony/flex": true
        }
    },
    "autoload": {
        "psr-4": {
            "Dsnetpl\\DoctrineColumnCommentBundle\\": "src/"
        }
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": ">=6.4.0"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
